{
  "packages": ["packages/*"],
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "conventionalCommits": true,
      "changelogPreset": "gitmoji-config",
      "message": ":bookmark: chore(release): publish"
    }
  },
  "useWorkspaces": true,
  "version": "independent",
  "npmClient": "yarn"
}
